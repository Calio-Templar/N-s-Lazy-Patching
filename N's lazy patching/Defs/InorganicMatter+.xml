		<workAmount>10000</workAmount>
		<ingredients>
		  <li>
			<filter>
			  <thingDefs>
				<li>Matter</li>
			  </thingDefs>
			</filter>
			<count>100</count>
		  </li>
		</ingredients>
		<fixedIngredientFilter>
		  <thingDefs>
				<li>Matter</li>
		  </thingDefs>
		</fixedIngredientFilter>
		<products>
		  <Nitre>300</Nitre>
		</products>
			<skillRequirements>
				<Crafting>15</Crafting>
			</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>Super_matter_E1</researchPrerequisite>
	</RecipeDef>
	
</Defs>